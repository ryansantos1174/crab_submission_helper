from DisappTrks.BackgroundEstimation.config_cfg import *
from DisappTrks.StandardAnalysis.customize import *

if not os.environ["CMSSW_VERSION"].startswith ("CMSSW_12_4_") and not os.environ["CMSSW_VERSION"].startswith ("CMSSW_13_0_"):
    print("Please use a CMSSW_12_4_X or CMSSW_13_0_X release...")
    sys.exit (0)

process = customize (process, "{{ year }}", "{{ era }}", realData= {{ default(True) | isRealData }},
                    applyPUReweighting = {{ default(False) | applyPUReweighting }},
                    applyISRReweighting = {{ default(False) | applyISRReweighting }},
                    applyTriggerReweighting = {{ default(False) | applyTriggerReweighting }},
                    applyMissingHitsCorrections = {{ default(False) | applyMissingHitsCorrections }},
                    runMETFilters = {{ default(False) | runMETFilters }})

{% if run_local %}
process.source.fileNames = cms.untracked.vstring("{{ input_files }}")
process.source.lumisToProcess=cms.untracked.VLuminosityBlockRange("{{ lumis_to_process }}")
{% endif %}